<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dist="http://schemas.android.com/apk/distribution"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.majorik.moviebox.feature.search">

    <dist:module
        dist:instant="false"
        dist:title="@string/title_feature_search">
        <dist:delivery>
            <dist:on-demand />
        </dist:delivery>

        <dist:fusing dist:include="true" />
    </dist:module>

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning,MissingApplicationIcon">
        <activity
            android:name=".presentation.ui.discover.DiscoverActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.SlidingActivity"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".presentation.ui.SearchableActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.SlidingActivity"
            tools:ignore="LockedOrientationActivity" />
    </application>

</manifest>