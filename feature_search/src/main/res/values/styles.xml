<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Filters" />

    <style name="Filters.HeaderTextStyle">
        <item name="android:textColor">@color/mine_shaft</item>
        <item name="android:fontFamily">@font/cc_montserrat_black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="Filters.SwitchCompatControlStyleDefault">
        <item name="android:thumb">@drawable/thumb_switch</item>
        <item name="track">@drawable/bg_switch_track</item>
    </style>

    <style name="Filters.SwitchCompatControlStyleNeutral">
        <item name="android:thumb">@drawable/thumb_switch</item>
        <item name="track">@drawable/bg_switch_neutral_track</item>
    </style>

    <style name="Filters.SwitchCompatControlStyleDefault.HeaderTextStyle" parent="Filters.HeaderTextStyle">
        <item name="android:thumb">@drawable/thumb_switch</item>
        <item name="track">@drawable/bg_switch_track</item>
    </style>

    <style name="Filters.ChipChoiceStyle" parent="@style/Widget.MaterialComponents.Chip.Action">
        <item name="android:textAppearance">@style/Filters.ChipTextStyleAppearance</item>
        <item name="android:textColor">@color/selector_text_color_chip</item>
        <item name="checkedIconEnabled">false</item>
        <item name="checkedIconVisible">false</item>
        <item name="chipBackgroundColor">@color/bg_chip_checkable</item>
        <item name="android:checkable">true</item>
    </style>

    <style name="Filters.ChipTextStyleAppearance">
        <item name="android:fontFamily">@font/cc_montserrat_semibold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.ImageViewWithCorners_8">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
</resources>