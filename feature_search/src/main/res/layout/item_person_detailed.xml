<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    app:cardBackgroundColor="@color/alabaster"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/p_image_layout"
            android:layout_width="64dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/p_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/placholder_profile_image"
                android:adjustViewBounds="true" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/p_image_layout"
            android:orientation="vertical">

            <TextView
                android:id="@+id/p_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/cc_montserrat_semibold"
                android:textColor="@color/mine_shaft"
                android:textSize="16sp"
                tools:text="Томми Ли Джонс" />

            <TextView
                android:id="@+id/p_know_for_department"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/cc_montserrat_medium"
                android:textColor="@color/silver"
                android:textSize="12sp"
                tools:text="Acting" />
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
