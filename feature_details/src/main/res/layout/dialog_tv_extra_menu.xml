<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="56dp"
            android:fontFamily="@font/rubik_one_regular"
            android:gravity="center"
            android:text="@string/details_extra_menu_title"
            android:textAllCaps="true"
            android:textColor="@color/mine_shaft"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/btn_close"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_down_24"
            android:tint="@color/mine_shaft"
            tools:ignore="ContentDescription" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout2">

        <androidx.cardview.widget.CardView
            style="@style/BaseClickableCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="8dp"
                android:drawableStart="@drawable/ic_bookmark_with_bg_32"
                android:drawablePadding="8dp"
                android:fontFamily="@font/cc_montserrat_semibold"
                android:gravity="center_vertical"
                android:text="@string/details_extra_menu_will_watch"
                android:textColor="@color/mine_shaft"
                android:textSize="14sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/BaseClickableCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="8dp"
                android:drawableStart="@drawable/ic_favorite_with_bg_32"
                android:drawablePadding="8dp"
                android:fontFamily="@font/cc_montserrat_semibold"
                android:gravity="center_vertical"
                android:text="@string/details_extra_menu_add_to_favorites"
                android:textColor="@color/mine_shaft"
                android:textSize="14sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/BaseClickableCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="8dp"
                android:drawableStart="@drawable/ic_star_with_bg_32"
                android:drawablePadding="8dp"
                android:fontFamily="@font/cc_montserrat_semibold"
                android:gravity="center_vertical"
                android:text="@string/details_tv_extra_menu_rate_tv"
                android:textColor="@color/mine_shaft"
                android:textSize="14sp" />

        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="8dp"
            android:background="@color/alabaster" />

        <androidx.cardview.widget.CardView
            style="@style/BaseClickableCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="8dp"
                android:drawableStart="@drawable/ic_fire_with_bg_32"
                android:drawablePadding="8dp"
                android:fontFamily="@font/cc_montserrat_semibold"
                android:gravity="center_vertical"
                android:text="@string/details_extra_menu_recommendation_and_similar"
                android:textColor="@color/mine_shaft"
                android:textSize="14sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/BaseClickableCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="8dp"
                android:drawableStart="@drawable/ic_reviews_with_bg_32"
                android:drawablePadding="8dp"
                android:fontFamily="@font/cc_montserrat_semibold"
                android:gravity="center_vertical"
                android:text="@string/details_extra_menu_reviews"
                android:textColor="@color/mine_shaft"
                android:textSize="14sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/BaseClickableCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="8dp"
                android:drawableStart="@drawable/ic_comments_with_bg_32"
                android:drawablePadding="8dp"
                android:fontFamily="@font/cc_montserrat_semibold"
                android:gravity="center_vertical"
                android:text="@string/details_extra_menu_comments"
                android:textColor="@color/mine_shaft"
                android:textSize="14sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/BaseClickableCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="8dp"
                android:drawableStart="@drawable/ic_video_player_with_bg_32"
                android:drawablePadding="8dp"
                android:fontFamily="@font/cc_montserrat_semibold"
                android:gravity="center_vertical"
                android:text="@string/details_extra_menu_trailers"
                android:textColor="@color/mine_shaft"
                android:textSize="14sp" />

        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="8dp"
            android:background="@color/alabaster" />

        <androidx.cardview.widget.CardView
            style="@style/BaseClickableCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="8dp"
                android:drawableStart="@drawable/ic_share_with_bg_32"
                android:drawablePadding="8dp"
                android:fontFamily="@font/cc_montserrat_semibold"
                android:gravity="center_vertical"
                android:text="@string/details_extra_menu_share"
                android:textColor="@color/mine_shaft"
                android:textSize="14sp" />
        </androidx.cardview.widget.CardView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="24dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>